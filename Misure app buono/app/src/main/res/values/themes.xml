<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MisureFinestre" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MisureFinestre" parent="Base.Theme.MisureFinestre" />

    <style name="Button_data">
        <item name="android:background">@drawable/bg_button_gre_vadli</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView_data">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/gre</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView_form_data">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/gre</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextView_piece_data">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/gre</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EditText_data">
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="EditText_form_data">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="EditText_piece_data">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">text</item>
    </style>


</resources>
